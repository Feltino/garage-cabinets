<div class="custom-block-html {{block.settings.stype }}">
  <div class="image">
    {% if block.settings.image != blank %}
    <a href="{{block.settings.url }}">
      {%- assign img_url = block.settings.image  | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                <img class="lazyload  feature-images"
                   
                     data-src="{{ img_url }}"
                     data-widths="[180, 360, 540]"
                     data-aspectratio="{{ block.settings.image.src.aspect_ratio }}"
                     data-sizes="auto"
                     alt="{{ image.alt | escape }}">
     
    </a>
    {% else %}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>
  <div class="content-text-menu">
    {% if block.settings.title != blank %}
    <h4>{{ block.settings.title }}</h4>
    {% endif %}
    {% if block.settings.custom_html != blank %}
    {{ block.settings.custom_html }}
    {% endif %}
    {% if block.settings.button_text != blank %}
    <a href="{{block.settings.url }}">{{ block.settings.button_text }}</a>
    {% endif %}
  </div>
</div>